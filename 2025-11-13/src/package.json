{
  "name": "devfest-toulouse",
  "event": {
    "name": "DevFest Toulouse",
    "url": "https://devfesttoulouse.fr/",
    "location": {
      "city": "Toulouse",
      "country": "France",
      "latitude": 43.54228454982411,
      "longitude": 1.5135988668549822
    }
  },
  "private": true,
  "description": "Comprenez la réactivité et les signaux dans les frameworks frontend modernes : du fonctionnement interne aux cas d'usage pratiques.",
  "scripts": {
    "dev": "slidev",
    "build": "slidev build --base /2025-11-13/devfest-toulouse/ --out ../../dist/2025-11-13/devfest-toulouse",
    "export": "slidev export --per-slide --output ../2025-11-13-devfest-toulouse.pdf",
    "thumbnail:cp": "ffmpeg -y -i slides-export/01.png -vf scale=-1:720 -compression_level 100 ./public/thumbnail.png",
    "thumbnail": "slidev export --per-slide --range 1 --format png",
    "thumbnail:dark": "slidev export --per-slide --range 1 --dark --format png",
    "thumbnail:cp:dark": "ffmpeg -y -i slides-export/01.png -vf scale=-1:720 -compression_level 100 ./public/thumbnail-dark.png",
    "optimize:thumbnails": "optipng -o2 -quiet ./public/thumbnail*.png"
  },
  "devDependencies": {
    "alien-signals": "^3.0.0"
  }
}
